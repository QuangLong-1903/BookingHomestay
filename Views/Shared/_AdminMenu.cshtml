    <div class="hamburger-icon" onclick="toggleAdminMenu()">
        <i class="bi bi-list"></i>
    </div>
    <ul class="dropdown-menu admin-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageHomestays">
                <i class="bi bi-house-gear"></i> Quản lý Homestay
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageUsers">
                <i class="bi bi-person-gear"></i> Quản lý người dùng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageBookings">
                <i class="bi bi-calendar-check"></i> Quản lý đơn đặt phòng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ThongKeBooking">
                <i class="bi bi-bar-chart"></i> Thống kê đơn đặt phòng
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="ManageReviews">
                <i class="bi bi-journal-text"></i> Quản lý báo cáo đánh giá
            </a>
