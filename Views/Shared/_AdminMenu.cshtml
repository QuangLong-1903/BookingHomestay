    </ul>
</div>

<style>
    .hamburger-menu {
        position: relative;
        display: inline-block;
        margin-left: auto; 
    }

    
    .hamburger-icon {
        font-size: 24px;
        cursor: pointer;
        color: #2c3e50;
        padding: 10px;
        display: flex;
        align-items: center;
    }

    .dropdown-menu.admin-nav {
        display: none;
        position: absolute;
        top: 100%;
        right: 0; 
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 4px;
        min-width: 250px;
        z-index: 1000;
        padding: 0;
        margin: 0;
    }

        .dropdown-menu.admin-nav.active {
            display: block;
        }

        .dropdown-menu.admin-nav .nav-item {
            list-style: none;
        }

        .dropdown-menu.admin-nav .nav-link {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            color: #2c3e50;
            text-decoration: none;
            font-size: 16px;
        }

            .dropdown-menu.admin-nav .nav-link:hover {
                background-color: #f8f9fa;
                color: #e67e22; 
            }

            .dropdown-menu.admin-nav .nav-link i {
                margin-right: 10px;
            }
</style>

<script>
    function toggleAdminMenu() {
        const menu = document.querySelector('.dropdown-menu.admin-nav');
        menu.classList.toggle('active');
    }

    document.addEventListener('click', function(event) {
        const menu = document.querySelector('.dropdown-menu.admin-nav');
        const hamburger = document.querySelector('.hamburger-menu .hamburger-icon');
        if (menu && hamburger && !menu.contains(event.target) && !hamburger.contains(event.target)) {
            menu.classList.remove('active');
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        const menu = document.querySelector('.dropdown-menu.admin-nav');
        if (menu) {
            menu.classList.remove('active');
        }
    });
</script>