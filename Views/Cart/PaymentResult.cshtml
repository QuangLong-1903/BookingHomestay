@{
    ViewData["Title"] = "Kết quả thanh toán";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kết quả thanh toán</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #e8eff5, #b3cde0);
            padding-top: 50px;
            color: #2c3e50;
            font-family: 'Montserrat', sans-serif;
        }

        .container-custom {
            width: 90%;
            margin: 0 auto;
        }

        h2 {
            font-weight: 700;
            color: #e67e22;
            text-align: center;
            margin-bottom: 30px;
        }

        .card {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            border: none;
            padding: 30px;
        }

        .alert-success {
            background-color: #e6f4ea;
            color: #2e7d32;
            border: 1px solid #a5d6a7;
            border-radius: 10px;
        }

        .alert-danger {
            background-color: #fce4ec;
            color: #c62828;
            border: 1px solid #ef9a9a;
            border-radius: 10px;
        }

        .btn-outline-secondary {
            background-color: #fff;
            color: #2c3e50;
            border: 2px solid #34495e;
            font-weight: 600;
            border-radius: 10px;
        }

            .btn-outline-secondary:hover {
                background-color: #34495e;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container-custom">
        <h2>Kết quả thanh toán</h2>
        <div class="card">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (string.IsNullOrEmpty(ViewBag.Message) && string.IsNullOrEmpty(ViewBag.Error))
            {
                <p class="text-center">Không có thông tin thanh toán để hiển thị.</p>
            }
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>